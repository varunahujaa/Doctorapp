<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowPendingRequest">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue1"
        android:padding="12dp"
        android:id="@+id/layout_top"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chat_dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chat_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Golap Barman"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.01"/>

                <TextView
                    android:id="@+id/chat_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AC Repring"
                    android:textSize="14sp"
                    android:textColor="@color/white_light"
                    android:fontFamily="@font/poppins_regular"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.04"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:clickable="true"
                android:id="@+id/directions"
                android:orientation="vertical"
                android:focusable="true"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_directions_black_24dp"
                    app:tint="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/call"
                android:clickable="true"
                android:orientation="vertical"
                android:focusable="true"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="16dp"
                    app:tint="@color/white"
                    android:src="@drawable/ic_call_black_24dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:clickable="true"
                android:id="@+id/message"
                android:orientation="vertical"
                android:focusable="true"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="16dp"
                    app:tint="@color/white"
                    android:src="@drawable/ic_message_black_24dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/message_recycler"
        android:padding="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_above="@+id/layout_bottom"
        android:layout_below="@+id/layout_top">



        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:background="@color/yellow1"
            android:layout_marginStart="12dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:padding="5dp"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:layout_below="@+id/time"
            android:textSize="17sp"
            android:background="@color/yellow1"
            android:layout_marginStart="12dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:padding="5dp"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:background="@color/yellow1"
            android:layout_marginStart="12dp"
            android:textColor="@color/black"
            android:layout_below="@+id/date"
            android:textSize="17sp"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:padding="5dp"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/layout_bottom"
        android:padding="5dp"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/accept_btn"
            android:text="Accept"
            android:background="@drawable/button_payment"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/poppins_medium"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:includeFontPadding="false"
            android:letterSpacing="0.03"/>

        <Button
            android:id="@+id/decline_btn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Decline"
            android:background="@drawable/button_decline"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:src="@drawable/send"
            android:fontFamily="@font/poppins_medium"
            android:textAllCaps="false"
            android:includeFontPadding="false"
            android:letterSpacing="0.03" />

    </RelativeLayout>

</RelativeLayout>