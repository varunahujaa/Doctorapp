<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
        <LinearLayout
            android:id="@+id/changeLocation"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:background="@drawable/button_login">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="10dp"
                android:padding="3dp"
                android:layout_gravity="center"
                android:src="@drawable/location"
                app:tint="@color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="6dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/cg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change_location"
                    android:fontFamily="@font/poppins_medium"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.01"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <TextView
                    android:layout_below="@id/cg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/click_to_change_the_location"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/white"
                    android:letterSpacing="0.01"
                    android:includeFontPadding="false"
                    android:layout_marginTop="2dp"/>

            </RelativeLayout>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/changeLocation"
            android:layout_alignBottom="@+id/changeLocation"
            android:onClick="changelocation"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@android:color/transparent"/>


        <LinearLayout
            android:id="@+id/requestSend"
            android:layout_below="@id/changeLocation"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:background="@drawable/button_login">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="10dp"
                android:padding="3dp"
                android:layout_gravity="center"
                android:src="@drawable/request"
                app:tint="@color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="6dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/rs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/requests_sent"
                    android:fontFamily="@font/poppins_medium"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.01"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_below="@id/rs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/click_to_see_sent_requests"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_regular"
                    android:letterSpacing="0.1"
                    android:includeFontPadding="false"
                    android:layout_marginTop="2dp" />
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/requestSend"
            android:layout_alignBottom="@+id/requestSend"
            android:onClick="sentrequestlist"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@android:color/transparent"/>

        <LinearLayout
            android:id="@+id/serviceHistory"
            android:layout_below="@id/requestSend"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:background="@drawable/button_login">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="10dp"
                android:padding="3dp"
                android:layout_gravity="center"
                android:src="@drawable/history"
                app:tint="@color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/sh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/services_history"
                    android:fontFamily="@font/poppins_medium"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.01"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <TextView
                    android:layout_below="@id/sh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/click_to_see_purchased_services"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins_regular"
                    android:letterSpacing="0.01"
                    android:textColor="@color/white"
                    android:includeFontPadding="false"
                    android:layout_marginTop="2dp"/>
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/serviceHistory"
            android:layout_alignBottom="@+id/serviceHistory"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@android:color/transparent"/>

        <LinearLayout
            android:id="@+id/cp"
            android:layout_below="@id/serviceHistory"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:background="@drawable/button_login">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="10dp"
                android:padding="3dp"
                android:layout_gravity="center"
                android:src="@drawable/password"
                app:tint="@color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/cpp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change_password"
                    android:fontFamily="@font/poppins_medium"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.01"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"   />

                <TextView
                    android:layout_below="@id/cpp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/click_to_set_new_password"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins_regular"
                    android:letterSpacing="0.01"
                    android:textColor="@color/white"
                    android:includeFontPadding="false"
                    android:layout_marginTop="2dp"/>
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cp"
            android:layout_alignBottom="@+id/cp"
            android:onClick="reset"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@android:color/transparent"/>

        <LinearLayout
            android:id="@+id/contactUs"
            android:layout_below="@id/cp"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:background="@drawable/button_login">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="10dp"
                android:padding="3dp"
                android:layout_gravity="center"
                android:src="@drawable/support"
                app:tint="@color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/cu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_us"
                    android:fontFamily="@font/poppins_medium"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.01"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"  />

                <TextView
                    android:layout_below="@id/cu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/click_here_to_get_details"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins_regular"
                    android:letterSpacing="0.01"
                    android:textColor="@color/white"
                    android:includeFontPadding="false"
                    android:layout_marginTop="2dp" />
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/contactUs"
            android:layout_alignBottom="@+id/contactUs"
            android:onClick="contact"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@android:color/transparent"/>

        <LinearLayout
            android:id="@+id/logOUT"
            android:layout_below="@id/contactUs"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:background="@drawable/button_login">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="10dp"
                android:padding="3dp"
                android:layout_gravity="center"
                android:src="@drawable/logout"
                app:tint="@color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/lo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/log_out"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.01"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"  />

                <TextView
                    android:layout_below="@id/lo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/logout_of_you_account"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins_regular"
                    android:letterSpacing="0.01"
                    android:textColor="@color/white"
                    android:includeFontPadding="false"
                    android:layout_marginTop="2dp"/>
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/logOUT"
            android:layout_alignBottom="@+id/logOUT"
            android:onClick="logout"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@android:color/transparent"/>



    </RelativeLayout>

